.chat-main

  .main-header
    .main-header__left-box
      %h2.main-header__left-box__current-group
        koji's group
      %ul.main-header__left-box__member-list
        Member：
        %li.main-header__left-box__member-list__member  kojikoji
    =link_to "/groups/1/edit" do
      .main-header__edit-btn Edit
  
  .messages
    .message
      .message__upper-info
        %p.message__upper-info__talker kojikoji
        %p.message__upper-info__date 2019/11/04(Mon) 17:00:16
      %p.message__text koji~
    .message
      .message__upper-info
        %p.message__upper-info__talker kojikoji
        %p.message__upper-info__date 2019/11/04(Mon) 17:00:41
      %p.message__text あ！

  .form
    = form_for [@group, @message], class: "new_message" do |f|
      .input-box
        = f.text_field :content, class: 'input-box__text', placeholder: "Let's type a message!"
        = f.label :image, class: 'input-box__image' do
          = icon('fas', 'image', class: 'fa-image')
          = f.file_field :image, class: 'input-box__image__file'
      = f.submit 'Send', class: 'submit-btn'
      
